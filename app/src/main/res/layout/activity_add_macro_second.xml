<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Ui.Activity.AddMacroActivity_second">
    <RelativeLayout
        android:id="@+id/topactionbar_not"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp70"
        android:background="@drawable/action_bar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true">

            <ImageView
                android:id="@+id/back_create_macro"
                android:layout_width="@dimen/dp20"
                android:layout_height="@dimen/dp20"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:elevation="8dp"
                android:layout_marginStart="@dimen/dp12"
                android:src="@drawable/back_btn"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/white"
                android:textSize="@dimen/sp16"
                android:fontFamily="@font/poppins_regular"
                android:text="Create Macro"/>
            <ImageView

                android:layout_width="@dimen/dp18"
                android:layout_height="@dimen/dp16"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp20"
                android:layout_toLeftOf="@id/search"
                android:src="@drawable/question_icon"/>

            <ImageView
                android:id="@+id/search"
                android:layout_marginRight="@dimen/dp30"
                android:layout_toLeftOf="@id/menu"
                android:layout_width="@dimen/dp18"
                android:layout_centerVertical="true"
                android:layout_height="@dimen/dp16"
                android:src="@drawable/search_icon"/>

            <ImageView
                android:id="@+id/menu"
                android:layout_width="@dimen/dp12"
                android:layout_height="@dimen/dp16"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="@dimen/dp12"
                android:layout_centerVertical="true"
                android:src="@drawable/three_dot"/>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tablayout_ui"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp40"
            android:layout_marginTop="@dimen/dp8"
            style="@style/MyTabLayout"
            app:tabSelectedTextColor="@color/black"
            app:tabTextColor="@color/black"
            android:background="#00FFFFFF"
            app:tabIndicatorColor="#EFA318"
            />

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewpager_one"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/tablayout_ui"/>

    </RelativeLayout>
</LinearLayout>