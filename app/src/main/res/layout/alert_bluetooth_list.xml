<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/dp12"
    android:background="@color/white">

    <TextView
        android:id="@+id/tv_select_app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Applications(s)"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/black"
        android:textSize="@dimen/dp20"/>


    <RadioGroup
        android:layout_below="@+id/tv_select_app"
        android:id="@+id/rg_blutooth_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/lly_bottom"
        android:orientation="vertical">


    </RadioGroup>

    <LinearLayout
        android:id="@+id/lly_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp8">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_cancel_selapp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:textColor="@color/theme_color"
                    android:text="Cancel"
                    />
                <TextView
                    android:id="@+id/tv_ok_selapp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_marginStart="@dimen/dp12"
                    android:textColor="@color/theme_color"
                    android:text="Ok"/>
            </LinearLayout>


        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>