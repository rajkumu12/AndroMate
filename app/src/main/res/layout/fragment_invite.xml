<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ui.Fragments.InviteFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:src="@drawable/invitefrined_logo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="36dp"
            android:layout_marginTop="60dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:text="@string/mobile_number"
                android:textColor="@color/black"
                android:textSize="@dimen/sp10" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp20"
                android:orientation="horizontal">

                <com.rilixtech.widget.countrycodepicker.CountryCodePicker
                    android:id="@+id/ccp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    app:ccp_defaultNameCode="IN"  />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@color/white"
                    android:fontFamily="@font/poppins_regular"
                    android:inputType="number"
                    android:paddingLeft="@dimen/dp8"
                    android:textColor="@color/black"
                    android:paddingBottom="2dp"
                    android:textSize="@dimen/dp12" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.75dp"
                android:layout_marginTop="@dimen/dp12"
                android:background="@color/theme_color" />


            <androidx.cardview.widget.CardView
                android:layout_width="123dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                app:cardElevation="6dp"
                android:outlineSpotShadowColor="@color/theme_color"
                android:outlineAmbientShadowColor="@color/theme_color"
                android:layout_marginTop="@dimen/dp20">
                <TextView
                    android:layout_width="123dp"
                    android:layout_height="30dp"
                    android:text="Refer"
                    android:shadowColor="@color/theme_color"
                    android:elevation="@dimen/dp12"
                    android:textColor="@color/white"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="center"
                    android:textSize="@dimen/dp12"
                    android:background="@drawable/btn_bg"/>
            </androidx.cardview.widget.CardView>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.75dp"
                android:layout_marginTop="@dimen/dp12"
                android:background="@drawable/shape_grad" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:text="Share with"
                android:layout_marginTop="@dimen/dp12"
                android:textColor="@color/black_light"
                android:textSize="@dimen/sp10" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp8"
                android:weightSum="4">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:layout_weight="0.8">
                    <ImageView
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:src="@drawable/whatsapp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1.2">
                    <ImageView
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:src="@drawable/fb"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1.2">
                    <ImageView
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:src="@drawable/insta"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:layout_weight="0.8">
                    <ImageView
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:src="@drawable/twitter"/>
                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:layout_width="@dimen/dp87"
                android:layout_marginTop="@dimen/dp16"
                android:layout_height="@dimen/dp33"
                android:layout_gravity="center"
                android:src="@drawable/playstoreicon"/>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>